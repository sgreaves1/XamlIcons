<UserControl x:Class="XamlIcons.UserControl.IconInfoDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:converters="clr-namespace:XamlIcons.Converters"
             mc:Ignorable="d" 
             x:Name="Root">

    <UserControl.Resources>
        <converters:BrushColorConverter x:Key="boolToColorConverter"/>
    </UserControl.Resources>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Content="{Binding ElementName=Root, Path=Icon.Name}" Grid.Row="0" HorizontalAlignment="Center"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Canvas Width="150" Height="150" Background="Transparent">
                <Path Width="150"
                      Height="150"
                      Stroke="Black"
                      StrokeThickness="3"
                      StrokeLineJoin="Round"
                      Stretch="Fill"
                      Fill="{Binding Path=FillIcon, Converter={StaticResource boolToColorConverter}}"
                      Data="{Binding ElementName=Root, Path=Icon.Data, Mode=TwoWay}"/>
            </Canvas>
            <CheckBox VerticalAlignment="Bottom" IsChecked="{Binding Path=FillIcon}"/>
            <Label VerticalAlignment="Bottom" Content="Fill"/>
        </StackPanel>
        <TextBox Height="50" TextWrapping="Wrap" Grid.Row="2" Text="{Binding ElementName=Root, Path=Icon.Data, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
    </Grid>
</UserControl>
