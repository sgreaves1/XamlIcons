<Window x:Class="XamlIcons.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XamlIcons"
        xmlns:viewModel="clr-namespace:XamlIcons.Designer"
        xmlns:userControl="clr-namespace:XamlIcons.UserControl"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="650"
        d:DataContext="{d:DesignInstance IsDesignTimeCreatable=True, Type={x:Type viewModel:DesignerMainWindowViewModel}}">

    <StackPanel>
        <userControl:IconInfoDisplay Icon="{Binding Path=SelectedIcon}"/>

        <ListBox ItemsSource="{Binding Path=Icons}" SelectedItem="{Binding Path=SelectedIcon}" DisplayMemberPath="Name"></ListBox>
    </StackPanel>
</Window>
